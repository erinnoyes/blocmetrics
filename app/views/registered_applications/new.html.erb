<h1>Track App Data</h1>

<div class="row">
    <div class="col-md-4">
        <p>Please make sure your url is valid and website is live!</p>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <%= form_for @app do |f| %>
            <div class="form-group">
                <%= f.text_field :name, class: 'form-control', placeholder: "Enter app name" %>
            </div>
            <div class="form-group">
                <%= f.text_field :url, class: 'form-control', placeholder: "Enter app url" %>
            </div>
            <div class="form-group">
                <%= f.submit "Save", class: 'btn btn-success' %>
            </div>
        <% end %>
    </div>
</div>
